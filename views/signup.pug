extends base

block content
  main.main
    .signup-form
      h2.heading-secondary Create an account
      form.form.form--signup
        .form__group
          label.form__label(for='name') Name
          input#new-name.form__input(type='text', placeholder='Your username', required)
        .form__group
          label.form__label(for='email') Email address
          input#new-email.form__input(type='email', placeholder='you@example.com', required)
        .form__group
          label.form__label(for='password') Password
          input#new-password.form__input(type='password', placeholder='••••••••', required, minlength='8')
        .form__group
          label.form__label(for='passwordConfirm') Confirm Password
          input#new-passwordConfirm.form__input(type='password', placeholder='••••••••', required, minlength='8')
        .form__group
          button.btn.btn--green Sign up