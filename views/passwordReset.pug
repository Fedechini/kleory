extends base

block content
  main.main
    .reset-password-form
      h2.heading-secondary Password reset
      form.form.form-reset-password
        .form__group
          label.form__label(for='password') New Password
          input#reset-password.form__input(type='password', placeholder='••••••••', required, minlength='8')
        .form__group
          label.form__label(for='passwordConfirm') Confirm New Password
          input#reset-passwordConfirm.form__input(type='password', placeholder='••••••••', required, minlength='8')
        .form__group.forgot-password
          button.btn Update